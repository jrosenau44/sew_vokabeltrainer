{% extends 'base.html.twig' %}

{% block title %}Translation index{% endblock %}

{% block body %}
    <h1>Translation index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>GermanTranslation</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for translation in translations %}
            <tr>
                <td>{{ translation.id }}</td>
                <td>{{ translation.germanTranslation }}</td>
                <td>
                    <a href="{{ path('app_translation_show', {'id': translation.id}) }}">show</a>
                    <a href="{{ path('app_translation_edit', {'id': translation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_translation_new') }}">Create new</a>
{% endblock %}
